<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CorFundo"
    tools:context=".MesasActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/mesa1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="189dp"
            app:srcCompat="@drawable/mesa2" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/mesas" />

        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="47dp"
            app:srcCompat="@drawable/btnlogout" />

        <ImageView
            android:id="@+id/mesa2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/mesa1"
            android:layout_marginEnd="54dp"
            app:srcCompat="@drawable/mesa" />

        <ImageView
            android:id="@+id/mesa3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/mesa1"
            android:layout_marginBottom="31dp"
            app:srcCompat="@drawable/mesa" />

        <ImageView
            android:id="@+id/mesa4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/mesa2"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/mesa" />

    </RelativeLayout>




</ScrollView>